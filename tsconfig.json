{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,

    "outDir": "./dist",

    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "strict": true,
    "noImplicitReturns": true,

    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
